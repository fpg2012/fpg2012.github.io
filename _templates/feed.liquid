<rss version="2.0">
  <channel>
    <title>{{ site.site_name }}</title>
    <link>{{ site.url | prepend: "https:" }}</link>
    
    {% if site.description %}
    <description>{{ site.description }}</description>
    {% else %}
    <description>{{ site.site_name }}, generated by sushi</description>
    {% endif %}
    
    {% if site.rss.language %}
    <language>{{ site.rss.language }}</language>
    {% endif %}
    
    <copyright>Copyright {{ site.author }} {{ "now" | date: "%Y"}}</copyright>
    
    {% if site.rss.webMaster %}
    <webMaster>{{ site.rss.webMaster }}</webMaster>
    {% endif %}
    
    <pubDate>{{ "now" | date: "%a, %d %b %Y %H:%M:%S GMT" }}</pubDate>
    <lastBuildDate>{{ "now" | date: "%a, %d %b %Y %H:%M:%S GMT" }}</lastBuildDate>
    
    <generator>sushi-gen, https://github.com/fpg2012/sushi</generator>
    
    {% for id in sitetree.posts._list %}
    <item>
      <title>{{ id_to_page[id].title }}</title>
      <link>{{ id_to_page[id].url | prepend: "https:"}}</link>
      {% if id_to_page[id].description %}
      <description>{{ id_to_page[id].description }}</description>
      {% else %}
      <description>{{ id_to_page[id].title }}</description>
      {% endif %}
      <pubDate>{{ id_to_page[id].date | date: "%a, %d %b %Y %H:%M:%S GMT" }}</pubDate>
      <guid>{{ id }}</guid>
      {% if id_to_page[id].category %}
        {% for cat in id_to_page[id].category %}
          <category>{{ cat }}</category>
        {% endfor %}
      {% endif %}
      {% if id_to_page[id].tag %}
        {% for tag in id_to_page[id].tag %}
          <category>{{ tag }}</category>
        {% endfor %}
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
